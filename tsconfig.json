{
    "compilerOptions": {
      "target": "es2022",
      "types": ["node", "jest"],
      "lib": ["es6", "es2021"],
      "module": "commonjs",
      "rootDir": "src",
      "resolveJsonModule": true,
      "allowJs": true,
      "outDir": "dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true,
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false
    }
  }
  